<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Guess.GamePage">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="labelHeader" HorizontalOptions="CenterAndExpand" FontSize="20"/>
            <Entry x:Name="entryGuess" Placeholder="Enter your guess" FontSize="20"/>
            <Button x:Name="btnGuess" Text="Guess" FontSize="20" Clicked="btnGuess_Clicked"/>
            <Button x:Name="btnCheat" Text="Cheat" FontSize="10" TextColor="Red" BackgroundColor="DarkRed" Clicked="btnCheat_Clicked" />
            <Label x:Name="labelOutput" HorizontalOptions="CenterAndExpand" FontSize="20"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>